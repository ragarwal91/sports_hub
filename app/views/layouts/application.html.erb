<!DOCTYPE html>
<html>
<head>
  <title>SportsHubApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <script type="text/javascript" src="//use.typekit.net/jvo4fbj.js"></script>
  <script type="text/javascript">try{Typekit.load();}catch(e){}</script>
  <link href='http://fonts.googleapis.com/css?family=Pacifico' rel='stylesheet' type='text/css'>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
    <div class="container">
      <div class="eight columns logo alpha">
        <h1><%= link_to('My Sports', root_path) %></h1>
      </div>
      <div class="eight columns header-info omega">
        <p>
          <% if session[:current_user] %>
          Welcome back, <%= User.find(session[:current_user]).first_name %>! |
          <%= link_to('Your Favorites', user_path(session[:current_user])) %> |
          <%= link_to('Teams', teams_path) %> |
          <%= link_to 'Log Out', logout_path %>
        <% else %>
          <%= link_to('Teams', teams_path) %>
          <%= link_to 'Log In', login_path %>
          <br>
          <%= link_to 'Sign Up', new_user_path %>
        <% end %>
        <% flash.each do |name, msg| %>
            <%= content_tag :div, msg, class: name %>
          <% end %>
        </p>
      </div>
    </div>
  </header>
  <div class="container main-content">

    <%= yield %>
  </div>
</body>
</html>
