<h2>Edit User</h2>

<ul>
  <% @user.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>


<%= form_for(@user) do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %>
  <br>

  <%= f.label :first_name %>
  <%= f.text_field :first_name %>
  <br>

  <%= f.label :last_name %>
  <%= f.text_field :last_name %>
  <br>

  <%= f.label :email_address %>
  <%= f.text_field :email_address %>
  <br>


  <%= f.label :password %>
  <%= f.password_field :password %>
  <br>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  <br>

  <%= f.label(:team) %>
  <% Sport.all.each do |sport| %>
    <%= select_tag("#{sport.sport_name.downcase}_team_id", options_for_select(sport.teams.all.map { |team| [team.team_name, team.id] })) %>
  <% end %>


  <%= f.submit %>
<% end %>

<%= link_to("Back to #{@user.username}", user_path(@user)) %>
<%= link_to('Delete', user_path(@user), {method: :delete}) %>
