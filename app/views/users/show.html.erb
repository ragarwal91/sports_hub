<div class="user-fav mlb eight columns alpha" style="background:#<%= @mlb_info["color"] %>">
  <h3><%= @mlb_info["location"] %> <%= @mlb_info["name"] %></h3>
  <%= render partial: 'team_news', locals: {team_news: @mlb_news} %>
  <a href="/teams/<%= @user.baseball_team_id %>" class="to-team"><%= @mlb_info["location"] %> <%= @mlb_info["name"] %> News</a>
</div>

