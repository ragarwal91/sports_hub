<div class="breaking-news sixteen columns alpha">
  <h3>Breaking News</h3>
  <a href="<%= @breaking_news.first['links']['web']['href'] %>" target="_blank"><h4><%= @breaking_news.first['headline'] %><br></h4></a>
</div>

